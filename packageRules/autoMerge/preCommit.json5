{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto Merge Pre-Commit",
      "matchManagers": ["pre-commit"],
      "automerge": true,
      "automergeType": "pr",
      "assigneesFromCodeOwners": false,
      "ignoreTests": true,
      "matchUpdateTypes": ["minor", "patch"],
    },
  ],
}
